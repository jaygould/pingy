generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  firstName String?
  lastName  String?
  email String  @unique
  password String?
  refreshToken String?
  loginActivity LoginActivity[] // User can have many loginActivity entries - linked together via Prisma
  pageCrawls PageCrawl[] // User can have many pageCrawls entries - linked together via Prisma
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LoginActivity {
  id  Int @id @default(autoincrement())
  userId  Int
  user  User  @relation(fields: [userId], references: [id])
  activityType String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PageCrawl {
  id  Int @id @default(autoincrement())
  userId  Int
  user  User  @relation(fields: [userId], references: [id])
  pageUrl String
  pageHtml String
  status Status
  monitorType String @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  initialCrawl
  changedContent
  pageDown
  cancelled
}